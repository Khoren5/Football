<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/amis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="20/12/2018"
        android:gravity="center"
        android:layout_below="@+id/switch1" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/pul5"
    android:text="FIFA xmbai pul"/>

    <TextView
        android:id="@+id/komand10"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_below="@+id/pul5"
        android:text="Russia"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/time71"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pul5"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/komand10"
        android:gravity="center"
        android:text="12:55"
        android:textColor="#000" />

    <TextView
        android:id="@+id/komand20"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pul5"
        android:layout_toEndOf="@+id/time71"
        android:gravity="center"
        android:text="Germania"
        android:textColor="#000"
        android:textSize="15dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/pul5"
        android:layout_marginRight="10dp"
        android:id="@+id/switch1" />
</RelativeLayout>