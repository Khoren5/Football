<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pull"/>
    <TextView
        android:id="@+id/komand1"
        android:layout_width="80dp"
        android:layout_below="@id/pull"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Brazilia" />

    <ImageView
        android:id="@+id/nkar1"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_toEndOf="@id/komand1"
        android:layout_below="@id/pull"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/komand2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SWICH"
        android:layout_toStartOf="@+id/SWICH"
        android:gravity="center"
        android:layout_marginEnd="2dp"
        android:text="Germania"
        android:textColor="#000"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/nkar2"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_below="@id/pull"
        android:layout_toStartOf="@+id/komand2" />

    <TextView
        android:id="@+id/time"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pull"
        android:layout_toStartOf="@+id/nkar2"
        android:layout_toEndOf="@id/nkar1"
        android:gravity="center"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="16:00" />

    <Switch
        android:id="@+id/SWICH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pull"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />
</RelativeLayout>