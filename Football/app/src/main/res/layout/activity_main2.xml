<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pr"
    tools:context="com.example.dell.football.Main2Activity"
    tools:layout_editor_absoluteY="81dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:src="@drawable/where" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbarSize="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="62dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.299"
                        tools:layout_editor_absoluteX="8dp">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/gndakk" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/zidan" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/henrik" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/mesney" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/ronaldo" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/neymar" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/messi" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:text="      Սպորտը   կփրկի   աշխարհը:\n                                                Նելսոն Մանդելա"
                    android:textColor="#143308" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.578">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="FIFA աշխարհի \nառաջնություններ"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarSize="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="150dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="0dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="0dp">

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/rusia" />

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="30dp"
                                    android:background="#fff"
                                    android:gravity="center"
                                    android:text="Չեմպիոն" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="0dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp">

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/brazil" />

                                <TextView
                                    android:id="@+id/ttt"
                                    android:layout_width="150dp"
                                    android:layout_height="30dp"
                                    android:background="#fff"
                                    android:gravity="center"
                                    android:text="Գերմանիա"
                                    android:textColor="#143308" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp">

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/afri" />

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:textColor="#143308" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp">

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/fif06" />

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:text=""
                                    android:textColor="#143308" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp">

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/fif02" />

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="89dp"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:text=""
                                    android:textColor="#143308" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp">

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/fif98" />

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:text=""
                                    android:textColor="#143308" />
                            </LinearLayout>


                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.727">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="FIFA 2018 \n Մասնակից թիմեր"
                    android:textColor="#000" />

                <ImageButton
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/yhn" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="FIFA 2018\nՀովանաորներ" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/ppit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/youtube"
                    android:background="@drawable/yout" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp" />

                <ImageButton
                    android:layout_width="25dp"
                    android:id="@+id/instagram"
                    android:layout_height="25dp"
                    android:background="@drawable/instag" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/facebook"
                    android:background="@drawable/faceb" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
</android.support.constraint.ConstraintLayout>
