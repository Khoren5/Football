<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff">

    <ImageView
        android:id="@+id/nkarr1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/komand10"
        android:layout_toEndOf="@+id/komand10" />

    <ImageView
        android:id="@+id/nkarr2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/nkarr1"
        android:layout_toStartOf="@+id/komand20" />
    <TextView
        android:id="@+id/amis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="20/12/2018"
        android:layout_below="@id/komand10" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:id="@+id/pul5"
    android:textColor="@color/colorPrimaryDark"
    android:text="FIFA xmbai pul"/>

    <TextView
        android:id="@+id/komand10"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_below="@+id/pul5"
        android:text="Russia"
        android:textColor="#000"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/time71"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pul5"
        android:layout_toStartOf="@+id/nkarr2"
        android:layout_toEndOf="@id/nkarr1"
        android:gravity="center"
        android:textSize="17dp"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="16:00" />


    <TextView
        android:id="@+id/komand20"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switch1"
        android:layout_toStartOf="@+id/switch1"
        android:gravity="center"
        android:text="Germania"
        android:textColor="#000"
        android:textSize="15dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/komand10" />
</RelativeLayout>