<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff">

    <ImageView
        android:id="@+id/nkarr1a"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/komand10a"
        android:layout_toEndOf="@+id/komand10a" />

    <ImageView
        android:id="@+id/nkarr2a"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/komand20a"
        android:layout_toStartOf="@+id/komand20a" />
    <TextView
        android:id="@+id/amis1a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="20/12/2018"
        android:layout_below="@id/komand10a" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/pul5a"
        android:text="FIFA xmbai pul"/>

    <TextView
        android:id="@+id/komand10a"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_below="@+id/pul5a"
        android:text="Russia"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/time71a"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pul5a"
        android:layout_toStartOf="@+id/nkarr2a"
        android:layout_toEndOf="@id/nkarr1a"
        android:gravity="center"
        android:textSize="17dp"
        android:textColor="#000"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/komand20a"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/notif"
        android:layout_toStartOf="@+id/notif"
        android:gravity="center"
        android:text="Germania"
        android:textColor="#000"
        android:textSize="15dp" />

   <Switch
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/notif"

       android:background="#fff"
       android:src="@drawable/notific"
       android:layout_below="@id/pul5a"
       android:layout_alignParentEnd="true"
       />

</RelativeLayout>