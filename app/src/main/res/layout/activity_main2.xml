<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pr"
    tools:context="com.example.dell.football.Main2Activity"
    tools:layout_editor_absoluteY="81dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:id="@+id/ntext"
                    android:text="Football  is   Life"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark" />
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbarSize="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="62dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.299"
                        tools:layout_editor_absoluteX="8dp">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/n1"
                            android:layout_marginEnd="1dp"

                            android:layout_marginStart="1dp" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/n2"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:id="@+id/n3" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:id="@+id/n4" />
                        <ImageView
                            android:layout_width="150dp"
                            android:id="@+id/n5"
                            android:layout_height="150dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="1dp"
                            android:id="@+id/n6"
                            android:layout_marginStart="1dp" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/n7"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp" />
                        <ImageView
                            android:layout_width="150dp"
                            android:id="@+id/n8"
                            android:layout_height="150dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"/>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/n9"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"/>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/n10"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"/>
                    </LinearLayout>
                </HorizontalScrollView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.578">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="FIFA World Cup"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarSize="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="0dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="0dp">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:id="@+id/fif18"
                                    android:background="#fff"
                                    android:layout_height="200dp" />

                                <TextView
                                    android:layout_width="300dp"
                                    android:layout_height="30dp"
                                    android:background="#fff"
                                    android:gravity="center"
                                    android:id="@+id/fif2018text"
                                    android:textColor="#000"
                                    android:text="Champion" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="0dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="200dp"
                                    android:id="@+id/fif14"
                                    android:background="#fff" />

                                <TextView
                                    android:id="@+id/ttt"
                                    android:layout_width="300dp"
                                    android:layout_height="30dp"
                                    android:background="#fff"
                                    android:gravity="center"
                                    android:text="Germany"
                                    android:textColor="#000" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="200dp"
                                   android:id="@+id/fif10"
                                    android:background="#fff" />

                                <TextView
                                    android:layout_width="300dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:text="Spain"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="200dp"
                                    android:id="@+id/fif06"
                                    android:background="#fff" />

                                <TextView
                                    android:layout_width="300dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:text="Italy"
                                    android:gravity="center"
                                    android:textColor="#000" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="200dp"
                                    android:id="@+id/fif02"
                                    android:background="#fff" />

                                <TextView
                                    android:layout_width="300dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:text="Brazil"
                                    android:gravity="center"
                                    android:textColor="#000" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="200dp"
                                    android:id="@+id/fif98"
                                    android:background="#fff" />

                                <TextView
                                    android:layout_width="300dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:text="France"
                                    android:gravity="center"
                                    android:textColor="#000" />
                            </LinearLayout>


                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:id="@+id/ararat73text"
                android:text="ARARAT 73\n USSR Champion"
                android:gravity="center"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="250dp">
              <android.support.v4.view.ViewPager
                  android:layout_width="match_parent"
                  android:id="@+id/ararat737"
                  android:layout_height="250dp"></android.support.v4.view.ViewPager>
          </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="FIFA  Partners" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/ppit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/youtube"
                    android:background="@drawable/yout" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp" />

                <ImageButton
                    android:layout_width="25dp"
                    android:id="@+id/instagram"
                    android:layout_height="25dp"
                    android:background="@drawable/instag" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/facebook"
                    android:background="@drawable/faceb" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
</android.support.constraint.ConstraintLayout>
